    function loadView(url) {
        $.get(url, function (data) {
            document.open();
            document.write(data);
            document.close();
        });
    }

    function updateCartCount() {
        $.ajax({
            url: '@Url.Action("GetCartCount", "Cart")',
            type: 'GET',
            success: function (data) {
                $('#cartCount').text(data);
            }
        });
    }

    // Call the updateCartCount function when the page loads
    $(document).ready(function () {
        updateCartCount();
    });

    $(document).ready(function () {
        // Bind the change event handler to the element
        $('#cartCount').on('change', function () {
            // Call the updateCartCount function
            updateCartCount();
        });
    });
