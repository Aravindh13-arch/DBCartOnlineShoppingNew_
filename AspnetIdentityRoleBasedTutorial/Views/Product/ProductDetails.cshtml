<body>
  <partial name="_CategoriesNavbar" />

  <div>
    <div class="section4-header">
      <span class="title">Electronics</span>
      <button class="next" onclick='scrollright4()'><i class="fa fa-angle-right"></i></button>
      <button class="previous" onclick='scrollleft4()'><i class="fa fa-angle-left"></i></button>
    </div>
    <hr />

    <section class="section4" id="section4">
   @foreach (var product in Model.ElectronicsCategroy)
   {
       <div class="product-item col-md-4">
         <div class="slider">
           <a href="#" class="like-button" id="heart" onclick="mainMenuNav('@Url.Action("AddWishList", "WishList", new { ProductId = product.ProductId })')"><i class="far fa-heart"></i></a>
           <a href="@Url.Action("ProductDetail", "Product", new { id = product.ProductId })">
             <img src="~/Img/@product.Image" width="200" height="150" class="img-fluid" />
           </a>
           <h5 class="mt-2">@product.ProductName</h5>
           <p>@product.Rate</p>
           <div class="quantity-container">
             <button class="quantity-button btn btn-outline-dark" onclick="decrementQuantity(this)">-</button>
             <input type="number" class="quantity-input form-control" name="quantity" value="1" min="1" max="100">
             <button class="quantity-button btn btn-outline-dark" onclick="incrementQuantity(this)">+</button>
           </div>
           <div class="button-container">
             <button type="button" class="btn btn-info" onclick="BuyNow('@Url.Action("GetAddressId", "Address", new { Id = product.ProductId })')">Buy</button>
             <button type="button" class="btn btn-dark" onclick="addToCart('@Url.Action("InsertToCart", "Cart", new { Id = product.ProductId, quantity = "TO_Num" })',this)">Add to Cart</button>
           </div>
         </div>
       </div>
   }
    </section>

  </div>
  <hr />

  <section class="section4" id="section4">
  @foreach (var product in Model.ElectronicsCategroy)
