          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
          <ul class="navbar-nav flex-grow-1">
      @if (User.Identity.IsAuthenticated)
      {
             <li class="nav-item">
               <a class="nav-link text-white" asp-area="" asp-controller="Product" asp-action="ProductDetails"><h5>Products</h5></a>
             </li>
      }
      @if (User.IsInRole("Admin"))
      {
             <li class="nav-item">
               <a class="nav-link text-white" asp-area="" asp-controller="Inventory" asp-action="GetAll"><h5>Inventory</h5></a>
             </li>
      }
          </ul>
          <partial name="_LoginPartial" />
        </div>
      </div>
    </nav>
  </header>
